@{
    ViewData["Title"] = "Trang Bảo Mật";
}

<div class="container text-center mt-5">
    <div class="card border-success mb-3" style="max-width: 40rem; margin: auto;">
        <div class="card-header bg-success text-white">
            <h4><i class="bi bi-shield-check"></i> Xác Thực Thành Công</h4>
        </div>
        <div class="card-body text-success">
            <h5 class="card-title">Xin chào <strong>@ViewBag.UserName</strong>!</h5>
            <p class="card-text">Bạn đã thực hiện đăng nhập thành công. Đây là trang thông tin bảo mật.</p>
        </div>
        <div class="card-footer bg-transparent border-success">
            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
                <i class="bi bi-box-arrow-right"></i> Đăng Xuất (Logout)
            </a>
        </div>
    </div>
</div>
