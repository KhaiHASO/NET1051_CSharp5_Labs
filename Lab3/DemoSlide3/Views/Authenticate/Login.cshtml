@model DemoSlide3.Models.LoginVm
@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center">Đăng Nhập</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Authenticate" asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        
                        <!-- Hidden field để lưu ReturnUrl -->
                        <input type="hidden" asp-for="ReturnUrl" />
                        
                        <!-- Hiển thị validation errors tổng quát -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        
                        <!-- Email field -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <!-- Password field -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Mật khẩu</label>
                            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <!-- Submit button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Đăng Nhập
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>Demo Authentication với ASP.NET Core Identity</small>
                </div>
            </div>
            
            <div class="mt-3 text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-link">
                    <i class="bi bi-house"></i> Về Trang Chủ
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

