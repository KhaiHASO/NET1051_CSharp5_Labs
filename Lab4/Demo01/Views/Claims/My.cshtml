@model Demo01.ViewModels.UserClaimsViewModel

@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h3>My Claims</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">User: @Model.UserEmail</h5>
            <p class="card-text">Here is a list of your current claims/permissions.</p>
            
            @if (Model.Claims.Any())
            {
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim Type</th>
                            <th>Claim Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.Claims)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@claim.Type</span></td>
                                <td>@claim.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">You do not have any specific claims assigned.</div>
            }
        </div>
    </div>
</div>
