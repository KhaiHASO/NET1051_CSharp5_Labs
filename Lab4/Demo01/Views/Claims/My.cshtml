@model Demo01.ViewModels.UserClaimsViewModel

@{
    ViewData["Title"] = "Claims Của Tôi";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h3>Claims Của Tôi</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">Tài khoản: @Model.UserEmail</h5>
            <p class="card-text">Danh sách các claims/quyền hạn hiện có của bạn.</p>
            
            @if (Model.Claims.Any())
            {
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Loại Claim (Type)</th>
                            <th>Giá Trị (Value)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.Claims)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@claim.Type</span></td>
                                <td>@claim.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">Bạn chưa có claim nào được gán.</div>
            }
        </div>
    </div>
</div>
