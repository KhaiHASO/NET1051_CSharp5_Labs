@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="text-center mb-5">
    <h1 class="display-4">CSharp5 - Slide 4 - Demo 01</h1>
    <p class="lead">Demo về ASP.NET Core Identity & Authorization dựa trên Claims</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">User Claims</h5>
                <p class="card-text">Tìm hiểu cách lưu trữ thông tin bổ sung (Claims) cho User trong bảng IdentityUserClaims.</p>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                 <a asp-controller="Claims" asp-action="My" class="btn btn-outline-primary w-100">Xem Claims Của Tôi</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Quản Lý Claims</h5>
                <p class="card-text">Giao diện Admin để Thêm hoặc Xoá Claims cho từng User cụ thể.</p>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                 <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-danger w-100">Vào Admin</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Policy Authorization</h5>
                <p class="card-text">Chặn truy cập Action bằng Policy (Ví dụ: Policy <code>RequireCanGrade</code>).</p>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                 <a asp-controller="Grades" asp-action="Index" class="btn btn-outline-success w-100">Thử Trang Chấm Điểm</a>
            </div>
        </div>
    </div>
</div>
