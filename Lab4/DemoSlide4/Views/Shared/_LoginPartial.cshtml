@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link neon-text-pink" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">USER: @User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link neon-text-blue border-0" style="text-decoration: none;">[DISCONNECT]</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link neon-text-blue" asp-area="Identity" asp-page="/Account/Register">[REGISTER_ID]</a>
    </li>
    <li class="nav-item">
        <a class="nav-link neon-text-pink" asp-area="Identity" asp-page="/Account/Login">[ESTABLISH_LINK]</a>
    </li>
}
</ul>
