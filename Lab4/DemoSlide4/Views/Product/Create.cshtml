@model DemoSlide4.Models.Product

@{
    ViewData["Title"] = "Generate Product";
}

<h1 class="neon-text-pink flicker">DATA_INPUT_TERMINAL</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card p-4">
            <h4 class="neon-text-blue mb-3">NEW_PRODUCT_ENTRY</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="control-label neon-text-blue"></label>
                    <input asp-for="Name" class="form-control bg-dark text-white border-info" style="box-shadow: 0 0 5px var(--neon-blue);" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="control-label neon-text-blue"></label>
                    <input asp-for="Price" class="form-control bg-dark text-white border-info" style="box-shadow: 0 0 5px var(--neon-blue);" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mt-4">
                    <input type="submit" value="EXECUTE_CREATE" class="btn btn-cyberpunk w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="neon-text-blue">BACK_TO_LIST</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
