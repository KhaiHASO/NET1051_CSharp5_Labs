@model IEnumerable<DemoSlide4.Models.Product>

@{
    ViewData["Title"] = "Product Database";
}

<h1 class="neon-text-blue mb-4 flicker">ACCESSING_PRODUCT_DATA...</h1>

<p>
    <a asp-action="Create" class="btn btn-cyberpunk">GENERATE_NEW_PRODUCT</a>
</p>

<table class="cyber-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
            <th>ACTIONS</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="neon-text-pink">@Html.DisplayFor(modelItem => item.Name)</td>
            <td>$@Html.DisplayFor(modelItem => item.Price)</td>
            <td style="font-family: monospace; color: #777;">@Html.DisplayFor(modelItem => item.CreatedBy)</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="neon-text-blue" style="text-decoration: none;">[VIEW_DETAILS]</a>
            </td>
        </tr>
}
    </tbody>
</table>
