@model IEnumerable<DemoSlide2.Models.ApplicationUser>
@{
    ViewData["Title"] = "Danh sách Users";
}

<h2>Danh sách Users</h2>
<hr />

<p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Về trang chủ</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Xóa</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-userId="@user.Id" class="btn btn-sm btn-info">Phân quyền</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

