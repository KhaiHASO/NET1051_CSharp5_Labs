@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Xóa Role";
}

<h2>Xóa Role</h2>
<hr />

<h3>Bạn có chắc chắn muốn xóa role này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="DeleteRole" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="ListRoles" class="btn btn-secondary">Hủy</a>
    </form>
</div>

