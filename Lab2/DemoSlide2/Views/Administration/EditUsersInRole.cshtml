@model DemoSlide2.ViewModels.UserRoleVm
@{
    ViewData["Title"] = "Quản lý Roles cho User";
}

<h2>Quản lý Roles cho User</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <h4>User: @Model.UserName</h4>
        <p><strong>Email:</strong> @Model.Email</p>
        <hr />

        <form asp-action="EditUsersInRole" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group mb-3">
                <h5>Chọn Roles:</h5>
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                        <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                        <input class="form-check-input" type="checkbox" asp-for="@Model.Roles[i].IsSelected" />
                        <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">
                            @Model.Roles[i].RoleName
                        </label>
                    </div>
                }
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-controller="Users" asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

