@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với DemoBai123</h1>
    <p class="lead">Demo ASP.NET Core Identity - Tổ chức theo Feature Folders (Bai1, Bai2, Bai3)</p>
    <hr />
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bài 1: Register</h5>
                    <p class="card-text">UserManager - Đăng ký user mới</p>
                    <ul class="text-start">
                        <li>Check trùng username/email</li>
                        <li>CreateAsync</li>
                        <li>Redirect sang Login</li>
                    </ul>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Đăng ký</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bài 2: Login + ChangePassword</h5>
                    <p class="card-text">SignInManager & UserManager</p>
                    <ul class="text-start">
                        <li>Login bằng SignInManager</li>
                        <li>ChangePassword với [Authorize]</li>
                        <li>UserManager.ChangePasswordAsync</li>
                    </ul>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-primary">Đổi mật khẩu</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Đăng nhập</a>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bài 3: Admin Role Management</h5>
                    <p class="card-text">RoleManager - CRUD Roles</p>
                    <ul class="text-start">
                        <li>Role CRUD (Create/List/Edit/Delete)</li>
                        <li>Gán/gỡ role cho user</li>
                        <li>Chỉ Admin truy cập được</li>
                    </ul>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="ListRoles" class="btn btn-primary">Quản lý Roles</a>
                    }
                    else
                    {
                        <p class="text-muted">Chỉ dành cho Admin</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="mt-4">
            <p><strong>Thông tin đăng nhập:</strong></p>
            <p>Tên đăng nhập: @User.Identity.Name</p>
            @if (User.IsInRole("Admin"))
            {
                <p class="badge bg-danger">Bạn là Admin</p>
            }
            else if (User.IsInRole("User"))
            {
                <p class="badge bg-info">Bạn là User</p>
            }
        </div>
    }
</div>

