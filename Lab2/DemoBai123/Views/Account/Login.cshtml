@model DemoBai123.Features.Bai2_Auth_ChangePassword.LoginVm
@{
    ViewData["Title"] = "Đăng nhập - Bài 2";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Đăng nhập</h2>
        <p class="text-muted">Bài 2: SignInManager - Login</p>
        <hr />

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
                <a asp-action="Register" class="btn btn-link">Chưa có tài khoản? Đăng ký</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

