@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Danh sách Roles - Bài 3";
}

<h2>Danh sách Roles</h2>
<p class="text-muted">Bài 3: RoleManager - CRUD Roles</p>
<hr />

@if (Model.Any())
{
    <p>
        <a asp-action="CreateRole" class="btn btn-primary">Tạo Role mới</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Role</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-sm btn-primary">Sửa</a>
                        <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p>Chưa có role nào. Hãy tạo role đầu tiên!</p>
        <a asp-action="CreateRole" class="btn btn-primary">Tạo Role mới</a>
    </div>
}

<p>
    <a asp-action="ListUsers" class="btn btn-secondary">Quản lý Users</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Về trang chủ</a>
</p>

