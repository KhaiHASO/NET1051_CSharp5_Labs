@model DemoBai123.Features.Bai3_Admin_Roles.CreateRoleVm
@{
    ViewData["Title"] = "Tạo Role mới - Bài 3";
}

<h2>Tạo Role mới</h2>
<p class="text-muted">Bài 3: RoleManager.CreateAsync</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="RoleName" class="form-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Tạo</button>
                <a asp-action="ListRoles" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

