@model IEnumerable<DemoBai123.Models.ApplicationUser>
@{
    ViewData["Title"] = "Danh sách Users - Bài 3";
}

<h2>Danh sách Users</h2>
<p class="text-muted">Bài 3: Quản lý Users và Roles</p>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="ManageUserRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-info">Phân quyền</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="ListRoles" class="btn btn-secondary">Quản lý Roles</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Về trang chủ</a>
</p>

